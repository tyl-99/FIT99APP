<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:backgroundTint="@color/black"
    tools:context=".ExerciseMainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorBlack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBlack"
            android:paddingBottom="60sp">

            <TextView
                android:id="@+id/mytext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_horizontal"
                android:text="Exercises"
                android:textColor="@color/colorBlue3"
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <!-- ... previous code ... -->

            <ImageView
                android:id="@+id/all"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:adjustViewBounds="false"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/all_exercise_foreground"
                android:tag="all"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mytext"
                app:layout_constraintWidth_percent="0.8"
                app:srcCompat="@mipmap/all_exercise_foreground" />

            <ImageView
                android:id="@+id/leg"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="40dp"
                android:adjustViewBounds="false"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/leg_exercise_foreground"
                android:tag="Leg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all"
                app:layout_constraintWidth_percent="0.8" />

            <ImageView
                android:id="@+id/cardio"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="40dp"
                android:adjustViewBounds="false"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/cardio_exercise_foreground"
                android:tag="Cardio and Stretch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/leg"
                app:layout_constraintWidth_percent="0.8" />

            <ImageView
                android:id="@+id/ab"
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="40dp"
                android:adjustViewBounds="false"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/ab_exercise_foreground"
                android:tag="Abs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardio"
                app:layout_constraintWidth_percent="0.8" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>