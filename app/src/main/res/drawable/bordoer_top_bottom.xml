<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top Border -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" /> <!-- Background color -->
        </shape>
    </item>

    <!-- Bottom Border -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" /> <!-- Background color -->
        </shape>
    </item>
</layer-list>